<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/bogoc"
    android:backgroundTint="#8CDBFF"
    android:orientation="vertical">
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/na"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/baloo2_semibold"
            android:gravity="center"
            android:text="Thêm hóa đơn nhập"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/baloo2_semibold"
            android:text="Mã hóa đơn:"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/mahd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/bogoc"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/baloo2_semibold"
            android:hint="Mã hóa đơn"
            android:paddingStart="30dp"
            android:paddingEnd="20dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/baloo2_semibold"
            android:text="Mã sản phẩm:"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_marginStart="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/baloo2_semibold"
            android:text="Tên sản phẩm:"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/tensp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/bogoc"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/baloo2_semibold"
            android:enabled="false"
            android:hint="Tên sản phẩm"
            android:paddingStart="30dp"
            android:paddingEnd="20dp"
            android:textColor="@color/black" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/baloo2_semibold"
            android:text="Giá tiền:"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/giatien"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/bogoc"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/baloo2_semibold"
            android:hint="Giá tiền"
            android:enabled="false"
            android:inputType="number"
            android:paddingStart="30dp"
            android:paddingEnd="20dp"
            android:textColor="@color/black" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/baloo2_semibold"
            android:text="Tên nhân viên:"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/tennv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/bogoc"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/baloo2_semibold"
            android:hint="Tên nhân viên"
            android:paddingStart="30dp"
            android:paddingEnd="20dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/baloo2_semibold"
            android:text="Số lượng:"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/soluong"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/bogoc"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/baloo2_semibold"
            android:hint="Số lượng"
            android:inputType="number"
            android:paddingStart="30dp"
            android:paddingEnd="20dp"
            android:textColor="@color/black" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/baloo2_semibold"
            android:text="Tổng tiền:"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/tongtien"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/bogoc"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/baloo2_semibold"
            android:hint="Tổng tiền"
            android:enabled="false"
            android:inputType="number"
            android:paddingStart="30dp"
            android:paddingEnd="20dp"
            android:textColor="@color/black" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"

            android:orientation="horizontal">

            <android.widget.Button
                android:id="@+id/btnthem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bogoc"
                android:backgroundTint="#2196F3"
                android:text="Thêm"
                android:textAllCaps="false"
                android:textColor="@color/black" />

            <android.widget.Button
                android:id="@+id/btnthoat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="30dp"
                android:background="@drawable/bogoc"
                android:backgroundTint="#2196F3"
                android:text="Thoát"
                android:textAllCaps="false"
                android:textColor="@color/black" />

        </LinearLayout>


    </LinearLayout>
</androidx.core.widget.NestedScrollView>

</LinearLayout>